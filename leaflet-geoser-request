<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
    />

    <title>Web-GIS with GeoServer and Leaflet</title>

    <style>
      body {
        margin: 0;
        padding: 0;
      }
      #map {
        width: 100%;
        height: 100vh;
      }
    </style>
  </head>
  <body>
    <div id="map"></div>
  </body>
</html>

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script src="lib/L.Geoserver.js"></script>

<script>
  // Set initial view to Kapcherop, Kenya (approximate coordinates)
  var map = L.map("map").setView([1.0833, 35.3167], 13);

  var osm = L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    maxZoom: 19,
    attribution:
      '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
  });

  osm.addTo(map);

  // WMS request for parcels
  var wmsLayer = L.Geoserver.wms("http://localhost:8084/geoserver/wms", {
    layers: "local:parcels", // Changed from topp:BU_2020_A0_S0 to local:parcels
    transparent: true,
    // CQL_FILTER: "TYPE=='RC_2'", // Assuming 'TYPE' might not be relevant for 'parcels', consider changing or removing
    attribution: "My WMS map of parcels", // Changed attribution
  });
  wmsLayer.addTo(map);

  // WFS layer for parcels
  var wfsLayer = L.Geoserver.wfs("http://localhost:8084/geoserver/wfs", {
    layers: "local:parcels", // Changed from topp:BU_2020_A0_S0 to local:parcels
    style: {
      color: "black",
      fillOpacity: "0.3",
      fillColor: "blue", // Changed fill color for parcels
    },
    onEachFeature: function (feature, layer) {
      console.log(feature);
      // Assuming 'parcel_id' or similar property exists for parcels, adjust as needed
      layer.bindPopup(
        "This is a parcel. Parcel ID: " + feature.properties.parcel_id || "N/A"
      );
    },
    // CQL_FILTER: "district='Kapcherop'", // Example CQL_FILTER for Kapcherop if a 'district' property exists
  });
  // Uncomment the line below to add the WFS layer to the map
  // wfsLayer.addTo(map);

  // Layer legend for parcels
  var layerLegend = L.Geoserver.legend("http://localhost:8084/geoserver/wms", {
    layers: "local:parcels", // Changed from topp:BU_2020_A0_S0 to local:parcels
    // style: `stylefile`, // Keep or remove based on your GeoServer style configuration
  });

  layerLegend.addTo(map);
</script>
